{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./ts/",
    "incremental": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["../**/*"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "webpack.config.js"]
}
